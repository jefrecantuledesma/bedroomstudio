# The full description of the plugin is in this file, which is linked to from
# `manifest.ttl`.  This is done so the host only needs to scan the relatively
# small `manifest.ttl` files to quickly discover all plugins.

@prefix doap:  <http://usefulinc.com/ns/doap#> .
@prefix foaf:  <http://xmlns.com/foaf/0.1/> .
@prefix lv2:   <http://lv2plug.in/ns/lv2core#> .
@prefix rdf:   <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs:  <http://www.w3.org/2000/01/rdf-schema#> .
@prefix units: <http://lv2plug.in/ns/extensions/units#> .

<https://github.com/psemiletov/metalluga>
	a lv2:Plugin ,
	lv2:DistortionPlugin ;

 doap:shortdesc "Virtual distortion box" ;
 doap:programming-language "C++" ;
 	doap:name "Metalluga",
		"Металлюга"@ru ;

		doap:maintainer [
	foaf:name "Bedroom Studio" ;
	foaf:homepage <https://github.com/psemiletov/bedroomstudio> ;
	foaf:mbox <peter.semiletov@gmail.com>
  ] ;

	doap:license <https://creativecommons.org/publicdomain/mark/1.0/> ;

	lv2:optionalFeature lv2:hardRTCapable ;

	lv2:port [
		a lv2:AudioPort ,
			lv2:InputPort ;
		lv2:index 0 ;
		lv2:symbol "in" ;
		lv2:name "In"
	] , [
		a lv2:AudioPort ,
			lv2:OutputPort ;
		lv2:index 1 ;
		lv2:symbol "out" ;
		lv2:name "Out"
	],
		[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 2 ;
		lv2:symbol "drive" ;
		lv2:name "Drive" ,
			"Драйв"@ru ;
		lv2:default 0.50 ;
		lv2:minimum 0.0 ;
		lv2:maximum 1.0 ;
		units:unit units:coef ;
		],

			   [
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 3 ;
		lv2:symbol "level" ;
		lv2:name "Level" ,
			"Уровень"@ru ;
		lv2:default 0.0 ;
		lv2:minimum -90.0 ;
		lv2:maximum 24.0 ;
		units:unit units:db ;
		lv2:scalePoint [
			rdfs:label "+5" ;
			rdf:value 5.0
		] , [
			rdfs:label "0" ;
			rdf:value 0.0
		] , [
			rdfs:label "-5" ;
			rdf:value -5.0
		] , [
			rdfs:label "-10" ;
			rdf:value -10.0
		]
		],

		[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 4 ;
		lv2:symbol "tone" ;
		lv2:name "Tone" ,
			"Тон"@ru ;
		lv2:default 0.50 ;
		lv2:minimum 0.01 ;
		lv2:maximum 0.99 ;
		units:unit units:coef ;

		]

		,

		[
		a lv2:InputPort ,
			lv2:ControlPort ;
		lv2:index 5 ;
		lv2:symbol "reso" ;
		lv2:name "Resonance" ,
			"Резонанс"@ru ;
		lv2:default 0.50 ;
		lv2:minimum 0.01 ;
		lv2:maximum 0.99 ;
		units:unit units:coef ;

		]
		.

